{
  "name": "streamer-buddy",
  "repository": "https://github.com/mithom/StreamerBuddy",
  "version": "0.0.18",
  "description": "An assistant for streaming which includes also some modules for specific games.",
  "author": "Brain",
  "private": true,
  "main": "main.js",
  "build": {
    "appId": "streamer-buddy",
    "productName": "StreamerBuddy",
    "copyright": null,
    "directories": {
      "buildResources": "static",
      "output": "build"
    },
    "win": {
      "target": "nsis-web",
      "publish": [
        {
          "provider": "github"
        }
      ]
    },
    "mac": {},
    "mas": {},
    "dmg": {},
    "pkg": {},
    "nsisWeb": {
      "allowElevation": true,
      "runAfterFinish": true,
      "menuCategory": true,
      "differentialPackage": true
    },
    "publish": [
      {
        "provider": "github"
      }
    ]
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=DEV electron .",
    "publish": "nuxt build && electron-builder -p always",
    "build": "nuxt build && electron-builder -p never",
    "pack": "nuxt build && electron-builder --dir"
  },
  "dependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-optional-chaining": "^7.2.0",
    "@nuxtjs/date-fns": "^0.1.1",
    "@nuxtjs/tailwindcss": "^1.1.2",
    "@tailwindcss/custom-forms": "^0.2.1",
    "atob": "^2.1.2",
    "axios": "^0.19.0",
    "camelize": "^1.0.0",
    "client-oauth2": "^4.2.5",
    "custom-electron-titlebar": "^3.1.0",
    "electron-json-storage": "^4.1.6",
    "electron-updater": "4.1.2",
    "electron-window-state": "^5.0.3",
    "js-sha1": "^0.6.0",
    "jsonwebtoken": "^8.5.1",
    "nuxt": "^2.9.2",
    "nuxt-i18n": "^6.3.0",
    "portal-vue": "^2.1.5",
    "secure-random": "^1.1.2",
    "velocity-animate": "^1.5.2",
    "vue": "^2.6.11",
    "vue-js-modal": "^1.3.31",
    "vue-loading-overlay": "3.2.0",
    "vue-zondicons": "^0.1.10",
    "vuedraggable": "^2.23.0",
    "vuex": "^3.1.1",
    "vuex-persist": "^2.2.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "cross-env": "^5.2.0",
    "electron": "^6.0.11",
    "electron-builder": "^21.2.0",
    "electron-devtools-installer": "2.2.4",
    "eslint": "^5.16.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-vue": "^5.2.2"
  }
}
