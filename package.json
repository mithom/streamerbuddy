{
  "name": "streamer-buddy",
  "repository": "https://github.com/mithom/StreamerBuddy",
  "version": "0.0.4",
  "description": "An assistant for streaming which includes also some modules for specific games.",
  "author": "Brain",
  "private": true,
  "main": "main.js",
  "build": {
    "appId": "streamer-buddy",
    "productName": "StreamerBuddy",
    "copyright": null,
    "directories": {
      "buildResources": "static",
      "output": "build"
    },
    "win": {
      "target": "nsis-web",
      "publish": [
        {
          "provider": "github"
        }
      ]
    },
    "mac": {},
    "mas": {},
    "dmg": {},
    "pkg": {},
    "nsisWeb": {
      "allowElevation": true,
      "runAfterFinish": true,
      "menuCategory": true,
      "differentialPackage": true
    },
    "publish": [
      {
        "provider": "github"
      }
    ]
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=DEV electron .",
    "publish": "nuxt build && electron-builder -p always",
    "build": "nuxt build && electron-builder -p never",
    "pack": "nuxt build && electron-builder --dir"
  },
  "dependencies": {
    "acorn": "^6.1.1",
    "custom-electron-titlebar": "^3.0.8",
    "electron-updater": "^4.0.6",
    "electron-window-state": "^5.0.3",
    "nuxt": "^2.7.1",
    "vue-wait": "^1.3.3"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "cross-env": "^5.1.4",
    "electron": "5.0.1",
    "electron-builder": "^20.40.2",
    "electron-devtools-installer": "^2.2.4",
    "eslint": "^4.15.0",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-vue": "^4.0.0"
  }
}
